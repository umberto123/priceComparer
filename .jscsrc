{
    "excludeFiles": ["node_modules/**", "bower_components/**"],

    "requireCurlyBraces": [
        "if",
        "else",
        "for",
        "while",
        "do",
        "try",
        "catch"
    ],
    "requireOperatorBeforeLineBreak": true,
    "requireCamelCaseOrUpperCaseIdentifiers": true,
    "maximumLineLength": {
      "value": 200,
      "allowComments": true,
      "allowRegex": true
    },
    //"validateIndentation": 4,
    "validateQuoteMarks": "'",

    "disallowMultipleLineStrings": true,
    "disallowMixedSpacesAndTabs": true,
    "disallowTrailingWhitespace": true,
    "disallowSpaceAfterPrefixUnaryOperators": true,
    "disallowMultipleVarDecl": false,

    "requireSpaceAfterKeywords": [
      "if",
      "else",
      "for",
      "while",
      "do",
      "switch",
      "return",
      "try",
      "catch"
    ],
    "requireSpaceBeforeBinaryOperators": [
        "=", "+=", "-=", "*=", "/=", "%=", "<<=", ">>=", ">>>=",
        "&=", "|=", "^=", "+=",

        "+", "-", "*", "/", "%", "<<", ">>", ">>>", "&",
        "|", "^", "&&", "||", "===", "==", ">=",
        "<=", "<", ">", "!=", "!=="
    ],
    "requireCamelCaseOrUpperCaseIdentifiers": true,
    "disallowArrowFunctions": true,
    "disallowShorthandArrowFunctions": true,
    "requireArrowFunctions": false,
    "disallowAnonymousFunctions": true,
    "requireSpaceAfterBinaryOperators": true,
    "requireSpacesInConditionalExpression": true,
    "requireSpaceBeforeBlockStatements": true,
    "disallowSpacesInsideObjectBrackets": "all",
    "disallowSpacesInsideArrayBrackets": "all",
    "disallowSpacesInsideParentheses": true,
    "disallowSpaceBeforeObjectValues": false,
    "disallowImplicitTypeConversion": ["numeric", "boolean", "binary", "string"],
    "disallowMultipleSpaces": true,
    "disallowNamedUnassignedFunctions": false,
    "disallowNestedTernaries": true,
    "disallowNewlineBeforeBlockStatements": true,
    "disallowSpaceBeforePostfixUnaryOperators": true,
    "disallowSpaceBeforeSemicolon": true,
    "disallowSpaceBetweenArguments": false,
    "disallowSpacesInCallExpression": true,
    "disallowSpacesInConditionalExpression": false,
    "disallowSpacesInForStatement": false,
    "disallowSpacesInFunctionDeclaration": false,
    "disallowSpacesInFunction": false,
    "disallowSpacesInGenerator": false,
    "disallowSpacesInNamedFunctionExpression": false,
    "disallowTabs": false,
    "disallowUnusedParams": true,
    "disallowVar": false,
    "maximumNumberOfLines": 250,

    "disallowMultipleLineBreaks": false,
    "disallowMultiLineTernary": false,
    "disallowYodaConditions": false,
    "requireBlocksOnNewline": true,

    "disallowCommaBeforeLineBreak": null,
    "disallowDanglingUnderscores": true,
    "disallowEmptyBlocks": null,
    "disallowMultipleLineStrings": null,
    "disallowTrailingComma": true,
    "requireCommaBeforeLineBreak": null,
    "requireDotNotation": true,
    "requireMultipleVarDecl": null,
    "requireParenthesesAroundIIFE": true
}
